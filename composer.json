{
  "name": "emartech/php-amqp-wrapper",
  "description": "helper classes and wrappers for rabbitmq connectivity ",
  "minimum-stability": "stable",
  "license": [
    "MIT"
  ],
  "prefer-stable" : true,
  "require": {
    "php": "^8.0",
    "php-amqplib/php-amqplib": "^3.0",
    "psr/log": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "phpunit/php-invoker": "^3.0",
    "fqqdk/packagist-publisher": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "fqqdk/packagist-publisher": true
    }
  },
  "autoload": {
    "psr-4": {
      "Emartech\\AmqpWrapper\\": "src/",
      "Test\\": "test/"
    }
  }
}
